<%- include('partials/header') %> 

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light"> Edit NFT Listing</h3>
                </div>
                <div class="card-body p-4">

                    <form action="/<%= NFT.id %>?_method=PUT" method="POST">
                        <%= console.log(NFT) %> 
                        <div class= "mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control form-control-lg" type="file" name="img" />
                            <img src="/<%= NFT.img %>" width="100" class="img-thumbnail mt-1" />
                        </div>
                        <input type="hidden" name="old_image" value="<%= NFT.img %>">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" value="<%= NFT.name %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="floorPrice">Floor Price</label>
                            <input type="text"  class="form-control form-control-lg" placeholder="Floor Price" name ="floorPrice"  value="<%= NFT.floorPrice %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="currentPrice">Current Price</label>
                            <input type="text"  class="form-control form-control-lg" placeholder="List Selling Price" name="currentPrice" value="<%= NFT.currentPrice %>" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <button type="submit" class="btn btn-primary"> Update NFT</button> 
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 